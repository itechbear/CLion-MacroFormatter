<idea-plugin version="2">
  <id>com.github.itechbear.intellij-macroexpansion</id>
  <name>MacroExpansion</name>
  <version>1.0</version>
  <vendor email="itechbear@gmail.com" url="http://github.com/itechbear/IntelliJ-MacroExpansion">itechbear@github</vendor>

  <description><![CDATA[
      An intellij idea plugin that provides extra information by org.llvm.clang.
    ]]></description>

  <change-notes><![CDATA[
      Initial commit.
    ]]>
  </change-notes>

  <!-- please see http://confluence.jetbrains.com/display/IDEADEV/Build+Number+Ranges for description -->
  <idea-version since-build="131"/>

  <!-- please see http://confluence.jetbrains.com/display/IDEADEV/Plugin+Compatibility+with+IntelliJ+Platform+Products
       on how to target different products -->
  <depends>com.intellij.modules.lang</depends>
  <depends>com.intellij.modules.cidr.lang</depends>

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
      <documentationProvider  implementation="com.github.itechbear.macroexpansion.provider.MacroDocumentationProvider" />
  </extensions>

  <application-components>
    <!-- Add your application components here -->
  </application-components>

  <project-components>
    <!-- Add your project components here -->
  </project-components>

  <actions>
    <!-- Add your actions here -->
  </actions>

</idea-plugin>